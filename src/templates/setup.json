{
	"filename": "setup",
	"html": "./src/templates/setup.html",
	"position": 1,
	"setMonorepo": {
		"true": {
			"run": ["npm init -y", "mkdir frontend backend"],
			"json": {
				"path": "package.json",
				"default": {
					"scripts": {
						"start:frontend": "npm --prefix frontend run start",
						"start:backend": "npm --prefix backend run start",
						"start": "concurrently \"npm run start:frontend\" \"npm run start:backend\""
					}
				}
			}
		},
		"type": "checkbox"
	},
	"selectModule": {
		"type": "radio",
		"esmodule": {
			"json": {
				"zone": "root",
				"path": "package.json",
				"default": {
					"type": "module"
				}
			}
		},
		"commonjs": {
			"json": {
				"zone": "root",
				"path": "package.json",
				"default": {
					"type": "commonjs"
				}
			}
		}
	},
	"projectName": {
		"type": "input",
		"json": {
			"path": "package.json",
			"default": {
				"name": "boilerplate"
			}
		}
	},
	"projectDescription": {
		"type": "input",
		"json": {
			"path": "package.json",
			"default": {
				"description": "description"
			}
		}
	},
	"initialVersion": {
		"type": "input",
		"json": {
			"path": "package.json",
			"default": {
				"version": "0.1.0"
			}
		}
	},
	"projectAuthor": {
		"type": "input",
		"json": {
			"path": "package.json",
			"default": {
				"author": "Jhon"
			}
		}
	},
	"authorEmail": {
		"type": "input",
		"json": {
			"path": "package.json",
			"default": {
				"email": "jhon@doe.com"
			}
		}
	},
	"selectLanguage": {
		"type": "radio",
		"typescript": {
			"run": ["echo 'typescript not implemented yet'"]
		},
		"javascript": {
			"run": ["echo 'nothing to do'"]
		}
	},
	"setPrivate": {
		"setPrivate": {
			"json": {
				"zone": "root",
				"path": "package.json",
				"default": {
					"private": true
				}
			}
		},
		"type": "checkbox"
	},
	"setPublic": {
		"type": "checkbox",
		"setPublic": {
			"run": ["mkdir ./public"]
		}
	},
	"setSrc": {
		"type": "checkbox",
		"setSrc": {
			"run": ["mkdir ./src"]
		}
	},
	"setDist": {
		"type": "checkbox",
		"setDist": {
			"run": ["mkdir ./dist ./build"]
		}
	}
}
