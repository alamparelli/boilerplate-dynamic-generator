{
	"filename": "setup",
	"html": "./src/templates/setup.html",
	"position": 1,
	"selectModule": {
		"type": "radio",
		"esmodule": {
			"json": {
				"path": "package.json",
				"default": {
					"type": "module"
				}
			}
		},
		"commonjs": {
			"json": {
				"path": "package.json",
				"default": {
					"type": "commonjs"
				}
			}
		}
	},
	"projectName": {
		"type": "input",
		"json": {
			"path": "package.json",
			"default": {
				"name": "boilerplate"
			}
		}
	},
	"projectDescription": {
		"type": "input",
		"json": {
			"path": "package.json",
			"default": {
				"description": "description"
			}
		}
	},
	"initialVersion": {
		"type": "input",
		"json": {
			"path": "package.json",
			"default": {
				"version": "0.1.0"
			}
		}
	},
	"projectAuthor": {
		"type": "input",
		"json": {
			"path": "package.json",
			"default": {
				"author": "Jhon"
			}
		}
	},
	"authorEmail": {
		"type": "input",
		"json": {
			"path": "package.json",
			"default": {
				"email": "jhon@doe.com"
			}
		}
	},
	"selectLanguage": {
		"type": "radio",
		"typescript": {
			"run": ["echo 'typescript not implemented yet'"]
		},
		"javascript": {
			"run": ["echo 'nothing to do'"]
		}
	},
	"setPrivate": {
		"setPrivate": {
			"json": {
				"path": "package.json",
				"default": {
					"private": true
				}
			}
		},
		"type": "checkbox"
	},
	"setPublic": {
		"type": "checkbox",
		"setPublic": {
			"run": ["mkdir ./public"]
		}
	},
	"setSrc": {
		"type": "checkbox",
		"setSrc": {
			"run": ["mkdir ./src"]
		}
	},
	"setDist": {
		"type": "checkbox",
		"setDist": {
			"run": ["mkdir ./dist ./build"]
		}
	}
}
