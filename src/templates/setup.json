{
	"filename": "setup",
	"html": "./src/templates/setup.html",
	"position": 1,
	"selectModule": {
		"type": "radio",
		"esmodule": {
			"json": {
				"path": "package.json",
				"esmodule": {
					"type": "module"
				}
			},
			"run": ["npm init -y"]
		},
		"commonjs": {
			"json": {
				"path": "package.json",
				"commonjs": {
					"type": "commonjs"
				}
			},
			"run": ["npm init -y"]
		}
	},
	"projectName": {
		"type": "input",
		"json": {
			"path": "package.json",
			"default": {
				"name": "boilerplate"
			}
		}
	},
	"projectAuthor": {
		"type": "input",
		"json": {
			"path": "package.json",
			"default": {
				"author": "Jhon"
			}
		}
	},
	"authorEmail": {
		"type": "input",
		"json": {
			"path": "package.json",
			"default": {
				"email": "jhon@doe.com"
			}
		}
	},
	"selectLanguage": {
		"type": "radio",
		"typescript": {
			"run": ["echo 'nothing to do'"]
		},
		"javascript": {
			"run": ["echo 'nothing to do'"]
		}
	}
}
