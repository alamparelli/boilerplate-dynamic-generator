{
	"filename": "backend",
	"html": "./src/templates/backend.html",
	"position": 2,
	"addExpress": {
		"addExpress": {
			"run": {
				"zone": "backend",
				"command": [
					"npm install express cors helmet express-validator",
					"mkdir ./routes ./controllers"
				]
			},
			"file": {
				"zone": "backend",
				"fileSource": "./src/templates/express/index.js",
				"fileDest": "./index.js"
			},
			"file1": {
				"zone": "backend",
				"fileSource": "./src/templates/express/userRoutes.js",
				"fileDest": "./routes/userRoutes.js"
			}
		},
		"type": "checkbox"
	},
	"addAuth": {
		"type": "checkbox",
		"addAuth": {
			"run": {
				"zone": "backend",
				"command": ["npm install bcrypt jsonwebtoken cookie-parser"]
			},
			"file1": {
				"zone": "backend",
				"fileSource": "./src/templates/express/authentication_userRoutes.js",
				"fileDest": "./routes/authentication.js"
			},
			"file2": {
				"zone": "backend",
				"fileSource": "./src/templates/express/authentication_controllers.js",
				"fileDest": "./controllers/authentication.js"
			}
		}
	},
	"addDb": {
		"type": "radio",
		"addMongoose": {
			"run": {
				"zone": "backend",
				"command": ["npm install mongoose", "mkdir ./db"]
			},
			"file": {
				"zone": "backend",
				"fileSource": "./src/templates/mongoose/database.js",
				"fileDest": "./db/database.js"
			}
		},
		"addPostgreSql": {
			"run": { "zone": "backend", "command": ["echo PostregSQL N/A"] }
		}
	}
}
